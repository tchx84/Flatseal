{
    "app-id": "com.github.tchx84.Flatseal",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "separate-locales": false,
    "command": "com.github.tchx84.Flatseal",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=/var/lib/flatpak/app:ro",
        "--filesystem=~/.local/share/flatpak/app:ro",
        "--filesystem=~/.local/share/flatpak/overrides:create",
        "--talk-name=org.gnome.Software"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libhandy",
            "buildsystem": "meson",
            "config-opts": [
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=false",
                "-Dglade_catalog=disabled"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://source.puri.sm/Librem5/libhandy/-/archive/v0.0.13/libhandy-v0.0.13.tar.gz",
                    "sha256": "138bec94e66d15a7a19350b65845d4529bcd969ea913ab3eb438f56fe47d5d37"
                }
            ]
        },
        {
            "name": "appstream-glib",
            "buildsystem": "meson",
            "config-opts": [
		"-Ddep11=false",
		"-Dbuilder=false",
		"-Drpm=false",
		"-Dalpm=false",
		"-Dfonts=false",
		"-Dstemmer=false",
		"-Dman=false",
		"-Dstemmer=false",
		"-Dgtk-doc=false",
		"-Dintrospection=true"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/hughsie/appstream-glib/archive/appstream_glib_0_7_17.tar.gz",
                    "sha256": "cb612c9e634275e574fa639737cf63711358cd10b9d0d377f70025653fefdd16"
                }
            ]
        },
        {
            "name": "flatseal",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "path": ".",
                    "branch": "HEAD"
                }
            ]
        }
    ]
}
