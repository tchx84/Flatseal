<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="FlatsealGlobalRow" parent="AdwActionRow">
    <property name="activatable">True</property>
    <property name="title" translatable="yes">All Applications</property>
    <property name="subtitle">global</property>
    <child type="prefix">
      <object class="GtkImage" id="icon">
        <property name="halign">center</property>
        <property name="valign">center</property>
        <property name="pixel-size">48</property>
        <property name="icon-name">com.github.tchx84.Flatseal.Flatpak</property>
        <style>
          <class name="icon"/>
          <class name="lowres-icon"/>
        </style>
      </object>
    </child>
    <style>
      <class name="row"/>
    </style>
  </template>
</interface>
